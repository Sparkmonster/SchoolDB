<%= form_with(model: section, local: true) do |form| %>
  <% if section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :sectionNum %>
    <%= form.number_field :sectionNum, id: :section_sectionNum %>
  </div>

  <strong> Any Section Numbers have to be greater than 100. </strong>

  <div class="field">
    <%= form.label :room %>
    <%= form.text_field :room, id: :section_room %>
  </div>

  <strong> Names of rooms can't be more than 15 characters long. They usually
    include a form of building code and room number. Example: SCI 1034
  </strong>

  <div class="field">
    <%= form.label :professor_id %>
    <%= form.select(:professor_id, options_from_collection_for_select(Professor.all, :id, :name)) %>
  </div>

  <strong> Please select a fantasy professor that is teaching the section. </strong>

  <div class="field">
    <%= form.label :course_id %>
    <%= form.select(:course_id, options_from_collection_for_select(Course.all, :id, :name)) %>
  </div>

  <strong> Select a course associated with the section the professor is teaching. </strong> 

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
